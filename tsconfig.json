{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowJs": false,
    "watch": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "./dist/**/*", "coverage", "*.js"]
}
